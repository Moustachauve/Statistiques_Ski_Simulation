@model IEnumerable<statistiques_ski.Models.CentreDeSki>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Ajouter un centre de ski", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Region.Skieur.Nom)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.Region.NomRegion)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.NbPistes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Altitude)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.Adresse)
		</th>
