    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.Region.NomRegion)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.NbPistes)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Altitude)
		</td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresse)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.CentreDeSkiID }) |
            @Html.ActionLink("Détails", "Details", new { id=item.CentreDeSkiID }) |
